<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1D489"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/android1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/android_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="15dp"
        />
    <ImageView
        android:id="@+id/android2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/android_2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/android1"
        android:background="#81B348"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:layout_centerInParent="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C5ED97"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#81B348"
            android:layout_margin="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E91E63"
            android:layout_margin="40dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1D489"
            android:layout_margin="60dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/android_3"
            android:layout_gravity="center"/>

    </FrameLayout>



</RelativeLayout>